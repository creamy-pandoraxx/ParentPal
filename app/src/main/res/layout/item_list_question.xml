<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_line_grey"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Tidak mau makan"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:maxLines="2"
            android:ellipsize="end"
            android:inputType="none"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/drawable_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/text_200"
            android:text="20.00"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/nunito_regular"
            android:textColor="@color/text_200"
            android:text="25 Juni 2023"
            app:layout_constraintStart_toEndOf="@id/tv_time"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginStart="16dp"/>
        
        <TextView
            android:id="@+id/tv_quest"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Selamat malam, Dokter. Saya memiliki masalah dengan anak saya yang tidak mau makan. Saya"
            app:layout_constraintStart_toEndOf="@id/iv_img"
            app:layout_constraintTop_toBottomOf="@id/tv_time"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nunito_regular"
            android:textSize="12sp"
            android:textColor="@color/text"
            android:maxLines="2"
            android:ellipsize="end"
            android:inputType="none"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>