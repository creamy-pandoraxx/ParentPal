<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BioActivity">
    
    <ImageView
        android:id="@+id/iv_backBio"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Biodata Anak"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/text"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/background_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bio"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_bio"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bio"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="12dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bio"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>
        
        <TextView
            android:id="@+id/tv_bio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_bio"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Biodata Anak 1"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:textColor="@color/text"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@id/tv_bio1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_drop"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"/>


            <EditText
                android:id="@+id/et_nama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/background_300"
                android:hint="Nama"
                android:padding="14dp"
                android:textColorHint="@color/text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_bio1"
                android:fontFamily="@font/nunito_medium"
                android:inputType="textPersonName"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_tgl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:backgroundTint="@color/background_300"
                android:hint="Tanggal Lahir"
                android:padding="14dp"
                android:textColorHint="@color/text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_nama"
                android:fontFamily="@font/nunito_medium"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:text="Jenis Kelamin"
                android:paddingStart="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_tgl"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/text"
                android:textSize="14sp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_gender"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"
                    android:buttonTint="@color/primary"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:textColor="@color/text"/>

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:layout_marginStart="100dp"
                    android:buttonTint="@color/primary"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:checked="true"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:textColor="@color/text"/>
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/cd_bio"
        app:layout_constraintEnd_toStartOf="@id/tv_tambah"
        android:src="@drawable/ic_plus"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"/>


    <TextView
        android:id="@+id/tv_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cd_bio"
        android:text="Tambah Data Anak"
        android:fontFamily="@font/nunito_semi_bold"
        android:textSize="12sp"
        android:textColor="@color/primary"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_blue"
        android:text="Lanjutkan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_semi_bold"
        android:textColor="@color/primary_300"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>