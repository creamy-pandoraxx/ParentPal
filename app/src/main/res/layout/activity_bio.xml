<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form.BioActivity">
    
    <ImageView
        android:id="@+id/iv_backBio"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/tv_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Biodata Anak"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/text"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/background_300"
        app:cardBackgroundColor="@color/background_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bio"
        app:cardElevation="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="12dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_bio"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>
        
        <TextView
            android:id="@+id/tv_bio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_bio"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Biodata Anak 1"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:textColor="@color/text"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@id/tv_bio1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_drop"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_nama"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_bio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_200"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/dismiss"
                app:endIconMode="clear_text"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/text_200"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="16dp"
                app:placeholderTextColor="@color/text">

                <EditText
                    android:id="@+id/et_nama"
                    style="@style/textstyle_enable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/il_birth"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/il_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_200"
                app:boxStrokeColor="@color/primary"
                app:endIconDrawable="@drawable/dismiss"
                app:endIconMode="clear_text"
                app:endIconTint="@color/primary"
                app:hintTextColor="@color/text_200"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="16dp"
                app:placeholderTextColor="@color/text">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_birth"
                    style="@style/textstyle_enable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Lahir"
                    android:inputType="date"
                    android:focusable="false"
                    android:onClick="showDatePicker"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:text="Jenis Kelamin"
                android:paddingStart="14dp"
                app:layout_goneMarginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/il_birth"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/text"
                android:textSize="14sp"/>

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laki-Laki"
                    android:buttonTint="@color/primary"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:textColor="@color/text"/>

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="16dp"
                    android:buttonTint="@color/primary"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:checked="true"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:textColor="@color/text"/>
            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/cd_bio"
        app:layout_constraintEnd_toStartOf="@id/tv_tambah"
        android:src="@drawable/ic_plus"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"/>


    <TextView
        android:id="@+id/tv_tambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cd_bio"
        android:text="Tambah Data Anak"
        android:fontFamily="@font/nunito_semi_bold"
        android:textSize="12sp"
        android:textColor="@color/primary"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_blue"
        android:text="Lanjutkan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_semi_bold"
        android:textColor="@color/primary_300"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>