<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ulasan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/ulasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="100dp"
                    android:paddingRight="100dp"
                    android:text="Ulasan"
                    android:textSize="20sp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/nunitobold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="50dp"
                    android:text="Tentang ParentPal"
                    android:textSize="16sp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/nunitobold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="10dp"
                    android:text="ParentPal merupakan aplikasi edukasi parenting yang berfungsi untuk membantu para orangtua dan calon orangtua dalam proses mengasuh anak sesuai dengan fase perkembangan Anak."
                    android:textSize="14sp"
                    android:textColor="@color/text_200"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="50dp"
                    android:text="Temukan ParentPal di Media Sosial!"
                    android:textSize="16sp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/nunitobold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="10dp"
                    android:text="Instagram: @parentpal.app"
                    android:textSize="14sp"
                    android:textColor="@color/text_200"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="10dp"
                    android:text="Facebook: ParentPal"
                    android:textSize="14sp"
                    android:textColor="@color/text_200"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="10dp"
                    android:text="Youtube: Official ParentPal Channel"
                    android:textSize="14sp"
                    android:textColor="@color/text_200"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingTop="10dp"
                    android:text="Website: www.parentpal.com"
                    android:textSize="14sp"
                    android:textColor="@color/text_200"
                    android:fontFamily="@font/nunito_regular" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>