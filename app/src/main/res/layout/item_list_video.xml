<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="264dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="16dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="148dp"
            app:strokeWidth="0dp"
            app:cardCornerRadius="0dp">
            <ImageView
                android:id="@+id/imgVideo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/artikel_img1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/thumbnail_video_background"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_gravity="bottom"
                android:paddingBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvcategoryVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:background="@drawable/shape_rectangle_brown"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Perkembangan Fisik"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/accent"
                    android:textSize="10sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">
                    <ImageView
                        android:id="@+id/ivPlayVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_play"/>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/tvTitleVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_bold"
            android:inputType="none"
            android:maxLines="2"
            android:text="Mata Juling pada Anak, Ini Penyebab dan Cara Mengatasinya!"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvAgeVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="169 x ditonton"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/nunito_regular"
            android:textSize="12sp"
            android:textColor="@color/text"/>


    </LinearLayout>



