<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navfragment.BerandaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Halo, Di"
            android:textColor="@color/text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nunito_medium"
            android:text="@string/semoga_hari_anda_menyenangkan"
            android:textColor="@color/text_200"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_notif"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.denzcoskun.imageslider.ImageSlider
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:id="@+id/imageSlider"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_title_background="@android:color/transparent"
            app:iss_selected_dot="@drawable/dot"
            app:iss_unselected_dot="@drawable/unselected_dot_default"
            app:iss_period="1000"/>
        <TextView
            android:id="@+id/tv_andalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Coba Menu Andalan Kami"
            android:textColor="@color/text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageSlider" />

        <LinearLayout
            android:id="@+id/ly_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_andalan">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_ahli" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_regular"
                    android:text="AhliPal"
                    android:textColor="@color/text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_fase" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_regular"
                    android:text="FasePal"
                    android:textColor="@color/text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_eduka" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_regular"
                    android:text="EdukaPal"
                    android:textColor="@color/text"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_bina" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_regular"
                    android:text="BinaPal"
                    android:textColor="@color/text"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Yuk Baca Sesuai Kategori"
            android:textColor="@color/text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ly_menu" />

        <HorizontalScrollView
            android:id="@+id/sv_kategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_kategori">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/shape_line_primary"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:text="Emosional"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_line_primary"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:text="Karakter"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_line_primary"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:text="Pendidikan"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_line_primary"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:text="Hobi"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_line_primary"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:text="Perkembangan Fisik"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_line_primary"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:text="Komunikasi"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/shape_line_primary"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:paddingHorizontal="15dp"
                    android:text="Kognitif"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/sv_artikel"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_kategori">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/artikel_img1"/>

                    <TextView
                        android:ellipsize="end"
                        android:inputType="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="14sp"
                        android:maxLines="3"
                        android:textColor="@color/text"
                        android:text="Mata Juling pada\nAnak, Ini Penyebab\ndan Cara\nMengatasinya!"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="12sp"
                        android:text="25 Juni 2023"
                        android:textColor="@color/text_200"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shape_rectangle_brown"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Perkembangan Fisik"
                        android:textAllCaps="false"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/artikel_img2"/>

                    <TextView
                        android:ellipsize="end"
                        android:inputType="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="14sp"
                        android:textColor="@color/text"
                        android:maxLines="3"
                        android:text="Catatan Imunisasi Si\nKecil Hilang? Begini\nLangkahnya, Moms"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="12sp"
                        android:text="26 Juni 2023"
                        android:textColor="@color/text_200"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shape_rectangle_brown"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Pendidikan"
                        android:textAllCaps="false"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/artikel_img3"/>

                    <TextView
                        android:ellipsize="end"
                        android:inputType="none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="14sp"
                        android:textColor="@color/text"
                        android:maxLines="3"
                        android:text="Tanda-Tanda\nMenstruasi pada\nAnak pada\nMasa Pubertas, Catat!"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="12sp"
                        android:text="24 Juni 2023"
                        android:textColor="@color/text_200"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/shape_rectangle_brown"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Perkembangan Fisik"
                        android:textAllCaps="false"
                        android:textColor="@color/accent"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tv_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Ahlinya Anak Hari Ini"
            android:textColor="@color/text"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sv_artikel" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_article"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_artikel"
            app:cardBackgroundColor="@color/background_300"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toBottomOf="@id/tv_artikel"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="1dp"
                app:cardCornerRadius="8dp">

                <TextView
                    android:id="@+id/tv_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menangis terlalu kencang"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.56 | 25 Juni 2023"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="12sp"
                    android:layout_marginTop="28dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/text_200"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halo dok, Dokter. Saya memiliki seorang anak yang sering\nmenangis sangat kencang, dan saya tidak tahu apa yang harus saya . . ."
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/text"
                    android:textSize="12sp"/>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:gravity="center|top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cd_article">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Lainnya"
                android:drawableEnd="@drawable/ic_next"
                android:fontFamily="@font/nunito_semi_bold"
                android:textSize="16sp"
                android:drawablePadding="8dp"
                android:textColor="@color/primary"
                android:gravity="center"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
