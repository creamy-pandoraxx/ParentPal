<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgArticle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/artikel_img1" />

    <TextView
        android:id="@+id/tvTitleArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_bold"
        android:inputType="none"
        android:maxLines="3"
        android:text="Mata Juling pada\nAnak, Ini Penyebab\ndan Cara\nMengatasinya!"
        android:textColor="@color/text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvdateArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/nunito_regular"
        android:text="25 Juni 2023"
        android:textColor="@color/text_200"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvcategoryArticle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_brown"
        android:fontFamily="@font/nunito_semi_bold"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="5dp"
        android:paddingVertical="8dp"
        android:text="Perkembangan Fisik"
        android:textColor="@color/accent"
        android:textSize="14sp"/>

</LinearLayout>
