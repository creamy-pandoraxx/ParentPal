<?xml version="1.0" encoding="utf-8"?>
<!-- custom_dialog.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="248dp"
        android:layout_height="248dp"
        android:src="@drawable/warning_people"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/bold_16"
        android:textColor="@color/text"
        android:text="Konfirmasi"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Anda yakin ingin keluar akun?"
        style="@style/regular_14"
        android:textColor="@color/text_200"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancel_button"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            style="@style/button"
            android:backgroundTint="@color/white"
            android:text="Batal"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/dialog_confirm_button"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            style="@style/button"
            android:text="Keluar"
            android:textColor="@color/primary_300"/>
    </LinearLayout>

</LinearLayout>
